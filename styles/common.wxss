/* 溢出样式 */
.overflow-hidden {
  overflow: hidden;
}

.overflow-auto {
  overflow: auto;
}

/* 文本溢出样式 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行文本溢出样式 */
.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 动画样式 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

@keyframes float-small {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-10rpx) scale(1.1);
  }
}

@keyframes pulse-glow {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 1;
    box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.6);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.slide-up {
  animation: slideUp 0.3s ease-in-out;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 20rpx 0 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 40rpx 40rpx 0 0;
  margin: 0;
  height: 130rpx;
  z-index: 1000;
  transition: all 0.3s ease;
}

/* 导航项容器 */
.nav-items {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  width: 100%;
  max-width: 600rpx;
}

/* 导航项基础样式 */
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  padding: 10rpx;
  flex: 1;
  max-width: 120rpx;
}

/* 导航图标基础样式 */
.nav-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
  border-radius: 0;
  background: transparent;
  padding: 0;
  box-shadow: none;
  display: block;
}

/* 非首页按钮图标 */
.nav-item:not(.nav-item-center) .nav-icon {
  border-radius: 0;
  background: transparent;
  box-shadow: none;
  padding: 0;
}

/* 导航文字基础样式 */
.nav-text {
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
  font-weight: 500;
}

/* 中间突出按钮容器 */
.center-item,
.nav-item-center {
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

/* 中间按钮样式 */
.center-button,
.nav-center-btn {
  position: relative;
  transform: translateY(-30rpx);
  transition: all 0.3s ease;
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 中间按钮背景 */
.center-button::before,
.nav-center-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #9013FE 50%, #4A90E2 100%);
  border-radius: 50%;
  animation: pulse-glow 2s ease-in-out infinite;
  z-index: -1;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 107, 0.4);
}

/* 中间按钮图标 */
.center-item .nav-icon,
.nav-item-center .nav-icon {
  width: 64rpx;
  height: 64rpx;
  padding: 16rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border: none;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.2);
  border-radius: 50%;
}

/* 首页中心图标 */
.nav-icon-center {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B6B 0%, #9013FE 50%, #4A90E2 100%);
  padding: 16rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.2);
  border: none;
  background-color: transparent !important;
}

/* 激活状态样式 */
.nav-item.active {
  transform: scale(1.1);
}

/* 激活状态图标 */
.nav-item.active .nav-icon {
  background: transparent;
  box-shadow: none;
  transform: scale(1.15);
}

/* 激活状态文字 */
.nav-item.active .nav-text {
  color: #FF6B6B;
  font-weight: bold;
  transform: scale(1.1);
}



/* 悬停效果 */
.nav-item:active {
  transform: scale(1.05);
}

/* 中间按钮悬停效果 */
.center-item:active .center-button {
  transform: translateY(-30rpx) scale(1.1);
}

/* 页面容器添加底部内边距，避免被底部导航遮挡 */
.container {
  padding-bottom: 150rpx;
