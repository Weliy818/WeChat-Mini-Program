/* app.wxss */
@import './styles/common.wxss';

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  box-sizing: border-box;
}

/* 全局样式重置 */
.container {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background: linear-gradient(135deg, #FFE0E0 0%, #E0F7FA 100%);
  min-height: 100vh;
}

/* 通用样式 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
}

.btn-primary:hover {
  background-color: #179b16;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  border: 2rpx solid #ddd;
}

.btn-secondary:hover {
  background-color: #e8e8e8;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* 列表样式 */
.list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #333;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.form-input:focus {
  outline: none;
  border-color: #1aad19;
}

/* 图标样式 */
.icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

/* 网格样式 */
.grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.grid-item {
  flex: 1 1 33.33%;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}