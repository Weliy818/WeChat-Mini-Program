<!-- pages/index/index.wxml -->
<view class="page-container">
  <!-- 装饰元素 -->
  <view class="star-decoration star-1"></view>
  <view class="star-decoration star-2"></view>
  <view class="star-decoration star-3"></view>
  <view class="star-decoration star-4"></view>
  <view class="cloud-decoration cloud-1"></view>
  <view class="cloud-decoration cloud-2"></view>
  
  <!-- 头部区域 -->
  <view class="page-header">
    <view class="header-content">
      <text class="header-title">童话绘本</text>
      <text class="header-subtitle">让每个孩子都能享受阅读的快乐</text>
    </view>
  </view>

  <view class="main-content">
    <!-- 搜索栏 -->
    <view class="search-wrapper">
      <view class="search-bar">
        <image class="search-icon" src="https://img.icons8.com/ios-filled/50/A855F7/search.png" mode="aspectFit"></image>
        <input class="search-input" placeholder="搜索你喜欢的绘本..." placeholder-class="search-placeholder" />
        <image class="search-sparkle" src="https://img.icons8.com/ios-filled/50/FFD700/star.png" mode="aspectFit"></image>
      </view>
    </view>

    <!-- 精选绘本区域 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">✨ 精选绘本</text>
      </view>

      <!-- 小王子 -->
      <view class="book-card" bindtap="onBookClick" data-id="1">
        <image class="book-cover" src="https://img2.baidu.com/it/u=2064135069,2383160837&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="aspectFill"></image>
        <view class="book-tag tag-hot">热门</view>
        <view class="book-info">
          <text class="book-title">小王子</text>
          <text class="book-author">安东尼·德·圣-埃克苏佩里</text>
          <view class="book-rating">
            <image wx:for="{{[1,2,3,4,5]}}" wx:key="*this" src="https://img.icons8.com/ios-filled/50/FFD700/star.png" mode="aspectFit"></image>
          </view>
        </view>
      </view>

      <!-- 双卡片行 - 绿野仙踪和爱丽丝 -->
      <view class="book-row">
        <view class="book-card-small" bindtap="onBookClick" data-id="2">
          <image class="book-cover-small" src="https://img2.baidu.com/it/u=2064135069,2383160837&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="aspectFill"></image>
          <view class="book-tag tag-classic">经典</view>
          <text class="book-title-small">绿野仙踪</text>
        </view>

        <view class="book-card-small" bindtap="onBookClick" data-id="3">
          <image class="book-cover-small" src="https://img2.baidu.com/it/u=2064135069,2383160837&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="aspectFill"></image>
          <view class="book-tag tag-fantasy">奇幻</view>
          <text class="book-title-small">爱丽丝梦游仙境</text>
        </view>
      </view>

      <!-- 彼得潘 -->
      <view class="book-card" bindtap="onBookClick" data-id="4">
        <image class="book-cover" src="https://img2.baidu.com/it/u=2064135069,2383160837&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="aspectFill"></image>
        <view class="book-tag tag-adventure">冒险</view>
        <view class="book-info">
          <text class="book-title">彼得潘</text>
          <text class="book-author">J·M·巴里</text>
          <view class="book-rating">
            <image wx:for="{{[1,2,3,4,5]}}" wx:key="*this" src="https://img.icons8.com/ios-filled/50/FFD700/star.png" mode="aspectFit"></image>
          </view>
        </view>
      </view>
    </view>

    <!-- 更多绘本区域 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title section-title-cyan">💫 更多绘本</text>
      </view>

      <!-- 双卡片行 - 夏洛的网和狐狸爸爸 -->
      <view class="book-row">
        <view class="book-card-small" bindtap="onBookClick" data-id="5">
          <image class="book-cover-small" src="https://img2.baidu.com/it/u=2064135069,2383160837&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="aspectFill"></image>
          <view class="book-tag tag-friendship">友谊</view>
          <text class="book-title-small">夏洛的网</text>
        </view>

        <view class="book-card-small" bindtap="onBookClick" data-id="6">
          <image class="book-cover-small" src="https://img2.baidu.com/it/u=2064135069,2383160837&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="aspectFill"></image>
          <view class="book-tag tag-funny">搞笑</view>
          <text class="book-title-small">了不起的狐狸爸爸</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部占位 -->
  <view class="bottom-space"></view>

  <!-- 底部导航 -->
  <view class="bottom-nav">
    <view class="nav-items">
      <view class="nav-item {{activeTab === 'customize' ? 'active' : ''}}" bindtap="switchTab" data-url="/pages/customize/index">
        <image class="nav-icon {{activeTab === 'customize' ? 'nav-icon-active' : ''}}" src="https://img.icons8.com/ios-filled/50/{{activeTab === 'customize' ? '7C3AED' : 'FFFFFF'}}/star.png" mode="aspectFit"></image>
        <text class="nav-text {{activeTab === 'customize' ? 'nav-text-active' : ''}}">定制</text>
      </view>
      <view class="nav-item {{activeTab === 'library' ? 'active' : ''}}" bindtap="switchTab" data-url="/pages/library/index">
        <image class="nav-icon {{activeTab === 'library' ? 'nav-icon-active' : ''}}" src="https://img.icons8.com/ios-filled/50/{{activeTab === 'library' ? '7C3AED' : 'FFFFFF'}}/library.png" mode="aspectFit"></image>
        <text class="nav-text {{activeTab === 'library' ? 'nav-text-active' : ''}}">书城</text>
      </view>
      <view class="nav-item nav-item-center {{activeTab === 'index' ? 'active' : ''}}">
        <view class="nav-center-btn">
          <image class="nav-icon-center" src="https://img.icons8.com/ios-filled/50/FFFFFF/home.png" mode="aspectFit"></image>
        </view>
        <text class="nav-text {{activeTab === 'index' ? 'nav-text-active' : ''}}">首页</text>
      </view>
      <view class="nav-item {{activeTab === 'learn' ? 'active' : ''}}" bindtap="switchTab" data-url="/pages/learn/index">
        <image class="nav-icon {{activeTab === 'learn' ? 'nav-icon-active' : ''}}" src="https://img.icons8.com/ios-filled/50/{{activeTab === 'learn' ? '7C3AED' : 'FFFFFF'}}/graduation-cap.png" mode="aspectFit"></image>
        <text class="nav-text {{activeTab === 'learn' ? 'nav-text-active' : ''}}">学习</text>
      </view>
      <view class="nav-item {{activeTab === 'profile' ? 'active' : ''}}" bindtap="switchTab" data-url="/pages/profile/index">
        <image class="nav-icon {{activeTab === 'profile' ? 'nav-icon-active' : ''}}" src="https://img.icons8.com/ios-filled/50/{{activeTab === 'profile' ? '7C3AED' : 'FFFFFF'}}/user.png" mode="aspectFit"></image>
        <text class="nav-text {{activeTab === 'profile' ? 'nav-text-active' : ''}}">个人</text>
      </view>
    </view>
  </view>
</view>
