<!-- pages/index/index.wxml -->
<view class="page-container">
  <!-- 装饰元素 -->
  <view class="star-decoration star-1"></view>
  <view class="star-decoration star-2"></view>
  <view class="star-decoration star-3"></view>
  <view class="star-decoration star-4"></view>
  <view class="cloud-decoration cloud-1"></view>
  <view class="cloud-decoration cloud-2"></view>
  
  <!-- 头部区域 -->
  <view class="page-header">
    <view class="header-content">
      <text class="header-title">故事绘本</text>
      <text class="header-subtitle">用爱陪伴，点亮星星的孩子</text>
    </view>
  </view>

  <view class="main-content">
    <!-- 搜索栏 -->
    <view class="search-wrapper">
      <view class="search-bar">
        <image class="search-icon" src="https://img.icons8.com/ios-filled/50/A855F7/search.png" mode="aspectFit"></image>
        <input class="search-input" placeholder="搜索你喜欢的绘本..." placeholder-class="search-placeholder" />
        <image class="search-sparkle" src="https://img.icons8.com/ios-filled/50/FFD700/star.png" mode="aspectFit"></image>
      </view>
    </view>

    <!-- 精选绘本区域 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title">✨ 精选绘本</text>
      </view>

      <!-- 情绪小怪兽 -->
      <view class="book-card" bindtap="onBookClick" data-id="1">
        <image class="book-cover" src="https://wy-1383356824.cos.ap-shanghai.myqcloud.com/%E5%85%94%E5%AD%90%E5%92%8C%E8%8A%B1.png" mode="aspectFill"></image>
        <view class="book-tag tag-hot">心智解读</view>
        <view class="book-info">
          <text class="book-title">情绪小怪兽</text>
          <text class="book-author">安娜·耶纳斯</text>
          <view class="book-rating">
            <view class="star-rating">
              <text wx:for="{{[1,2,3,4,5]}}" wx:key="*this" style="color: #FFD700; font-size: 24rpx;">★</text>
            </view>
          </view>
        </view>
      </view>

      <!-- 双卡片行 - 社交礼仪和常识认知 -->
      <view class="book-row">
        <view class="book-card-small" bindtap="onBookClick" data-id="2">
          <image class="book-cover-small" src="https://wy-1383356824.cos.ap-shanghai.myqcloud.com/%E4%BF%A9%E5%B0%8F%E5%AD%A9%E8%BE%A9%E4%B9%A6.png" mode="aspectFill"></image>
          <view class="book-tag tag-classic">社交礼仪</view>
          <text class="book-title-small">一起做朋友</text>
        </view>

        <view class="book-card-small" bindtap="onBookClick" data-id="3">
          <image class="book-cover-small" src="https://wy-1383356824.cos.ap-shanghai.myqcloud.com/%E5%B0%8F%E7%8C%AB%E6%B4%97%E6%89%8B.png" mode="aspectFill"></image>
          <view class="book-tag tag-fantasy">常识认知</view>
          <text class="book-title-small">学习洗手</text>
        </view>
      </view>

      <!-- 趣味故事 -->
      <view class="book-card" bindtap="onBookClick" data-id="4">
        <image class="book-cover" src="https://wy-1383356824.cos.ap-shanghai.myqcloud.com/%E4%B8%89%E5%85%84%E5%BC%9F.jpg" mode="aspectFill"></image>
        <view class="book-tag tag-adventure">趣味故事</view>
        <view class="book-info">
          <text class="book-title">好朋友们</text>
          <text class="book-author">李欧·李奥尼</text>
          <view class="book-rating">
            <view class="star-rating">
              <text wx:for="{{[1,2,3,4,5]}}" wx:key="*this" style="color: #FFD700; font-size: 24rpx;">★</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 更多绘本区域 -->
    <view class="section">
      <view class="section-header">
        <text class="section-title section-title-cyan">💫 更多绘本</text>
      </view>

      <!-- 双卡片行 - 社交礼仪和趣味故事 -->
      <view class="book-row">
        <view class="book-card-small" bindtap="onBookClick" data-id="5">
          <image class="book-cover-small" src="https://wy-1383356824.cos.ap-shanghai.myqcloud.com/%E5%85%94%E5%AD%90%E7%A7%AF%E6%9C%A8.jpg" mode="aspectFill"></image>
          <view class="book-tag tag-friendship">社交礼仪</view>
          <text class="book-title-small">礼貌小明星</text>
        </view>

        <view class="book-card-small" bindtap="onBookClick" data-id="6">
          <image class="book-cover-small" src="https://wy-1383356824.cos.ap-shanghai.myqcloud.com/%E5%85%94%E5%AD%90%E5%BC%80%E9%97%A8.jpg" mode="aspectFill"></image>
          <view class="book-tag tag-funny">趣味故事</view>
          <text class="book-title-small">神奇的一天</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部占位 -->
  <view class="bottom-space"></view>

  <!-- 底部导航 -->
  <view class="bottom-nav">
    <view class="nav-items">
      <!-- 左侧：定制 -->
      <view class="nav-item {{activeTab === 'customize' ? 'active' : ''}}" bindtap="switchTab" data-url="/pages/customize/index">
        <image class="nav-icon {{activeTab === 'customize' ? 'nav-icon-active' : ''}}" src="https://img.icons8.com/ios-filled/50/{{activeTab === 'customize' ? '7C3AED' : '888888'}}/star.png" mode="aspectFit"></image>
        <text class="nav-text {{activeTab === 'customize' ? 'nav-text-active' : ''}}">定制</text>
      </view>

      <!-- 中间：首页 -->
      <view class="nav-item nav-item-center {{activeTab === 'index' ? 'active' : ''}}">
        <view class="nav-center-btn">
          <image class="nav-icon-center" src="https://img.icons8.com/ios-filled/50/FFFFFF/home.png" mode="aspectFit"></image>
        </view>
        <text class="nav-text {{activeTab === 'index' ? 'nav-text-active' : ''}}">首页</text>
      </view>

      <!-- 右侧：个人 -->
      <view class="nav-item {{activeTab === 'profile' ? 'active' : ''}}" bindtap="switchTab" data-url="/pages/profile/index">
        <image class="nav-icon {{activeTab === 'profile' ? 'nav-icon-active' : ''}}" src="https://img.icons8.com/ios-filled/50/{{activeTab === 'profile' ? '7C3AED' : '888888'}}/user.png" mode="aspectFit"></image>
        <text class="nav-text {{activeTab === 'profile' ? 'nav-text-active' : ''}}">个人</text>
      </view>
    </view>
  </view>
</view>
