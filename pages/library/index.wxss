/* pages/library/index.wxss */
page {
  background: linear-gradient(180deg, #E0F2FE 0%, #DBEAFE 30%, #F3E8FF 100%);
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

/* 页面容器添加底部内边距，避免被底部导航遮挡 */
.page-container {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

/* 头部区域 */
.page-header {
  background: linear-gradient(135deg, #60A5FA 0%, #A78BFA 50%, #F472B6 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  margin: 0;
  width: 100%;
}

/* 头部内容区域 */
.main-content {
  padding: 0 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 原始header样式，保持兼容性 */
.header {
  background: linear-gradient(135deg, #60A5FA 0%, #A78BFA 50%, #F472B6 100%);
  padding: 80rpx 0 60rpx;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  margin: 0;
  width: 100%;
}

/* 装饰元素样式 */
.star-decoration, .cloud-decoration {
  display: none;
}

.header-bg-1 {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.header-bg-2 {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(50%, 50%);
}

.header-content {
  position: relative;
  z-index: 10;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 0;
  text-align: center;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
}

.header-right {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.9;
}

/* 搜索栏 */
.search-wrapper {
  padding: 0 32rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 20;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.search-bar {
  background: #fff;
  border-radius: 50rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid transparent;
  background-image: linear-gradient(white, white), linear-gradient(90deg, #F472B6, #A855F7, #3B82F6);
  background-origin: border-box;
  background-clip: padding-box, border-box;
  box-sizing: border-box;
  gap: 16rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0;
  font-size: 28rpx;
  color: #374151;
  background: transparent;
  border: none;
}

.search-placeholder {
  color: #9CA3AF;
}

.filter-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #A78BFA, #F472B6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(168, 85, 247, 0.3);
  flex-shrink: 0;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 分类标签 */
.categories-scroll {
  white-space: nowrap;
  margin-bottom: 0;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.categories {
  display: inline-flex;
  gap: 16rpx;
  padding: 16rpx 0;
}

.category-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(90deg, #F3E8FF, #E0F2FE);
  border-radius: 30rpx;
  border: 3rpx solid #D8B4FE;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.category-btn::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #A855F7, #EC4899);
  transition: width 0.3s ease;
}

.category-btn.active::after {
  width: 100%;
}

.category-btn.active {
  background: linear-gradient(90deg, #A855F7, #EC4899);
  border: 3rpx solid transparent;
  box-shadow: 0 6rpx 20rpx rgba(168, 85, 247, 0.3);
}

.category-name {
  font-size: 28rpx;
  color: #6B7280;
  font-weight: 600;
  position: relative;
  z-index: 10;
}

.category-btn.active .category-name {
  color: #fff;
}

.category-badge {
  padding: 4rpx 12rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.category-badge text {
  font-size: 22rpx;
  color: #EC4899;
  font-weight: bold;
}

/* 书籍列表 */
.books-list {
  padding: 0 32rpx;
  box-sizing: border-box;
}

.book-card {
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.book-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.book-cover-container {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #DDD6FE, #FBCFE8);
}

.book-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.book-info {
  padding: 24rpx;
  box-sizing: border-box;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1F2937;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: linear-gradient(90deg, #EC4899, #F97316);
  box-shadow: 0 4rpx 10rpx rgba(236, 72, 153, 0.3);
}

.book-tag text {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.book-author {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-rating {
  display: flex;
  gap: 4rpx;
}

.book-rating image {
  width: 28rpx;
  height: 28rpx;
}

.book-readers {
  font-size: 24rpx;
  color: #9CA3AF;
  font-weight: 500;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}
