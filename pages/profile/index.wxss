/* pages/profile/index.wxss */
page {
  background: linear-gradient(180deg, #FCE7F3 0%, #F3E8FF 30%, #DBEAFE 100%);
}

.container {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

/* 页面容器添加底部内边距，避免被底部导航遮挡 */
.page-container {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

/* 头部区域 */
.page-header {
  background: linear-gradient(135deg, #F472B6 0%, #A78BFA 50%, #60A5FA 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  overflow: hidden;
}

.header-bg-circle {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.header-bg-1 {
  top: 0;
  right: 0;
  transform: translate(50%, -50%);
}

.header-bg-2 {
  bottom: 0;
  left: 0;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.1);
  transform: translate(-50%, 50%);
}

.header-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  margin-bottom: 24rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar.default {
  background: rgba(255, 255, 255, 0.2);
}

.avatar-icon {
  width: 70rpx;
  height: 70rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-fallback {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 24rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.user-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 24rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 48rpx;
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
}

.login-btn text {
  font-size: 30rpx;
  font-weight: bold;
  color: #7C3AED;
}

/* 统计卡片 */
.stats-grid {
  display: flex;
  gap: 20rpx;
  padding: 0 32rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 20;
  margin-bottom: 30rpx;
}

.stat-card {
  flex: 1;
  padding: 28rpx 16rpx;
  border-radius: 40rpx;
  text-align: center;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-blue {
  background: linear-gradient(135deg, #60A5FA, #22D3EE);
}

.stat-pink {
  background: linear-gradient(135deg, #F472B6, #FB7185);
}

.stat-yellow {
  background: linear-gradient(135deg, #FBBF24, #FB923C);
}

.stat-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stat-icon-container.stat-blue {
  background: rgba(96, 165, 250, 0.2);
}

.stat-icon-container.stat-pink {
  background: rgba(244, 114, 182, 0.2);
}

.stat-icon-container.stat-yellow {
  background: rgba(251, 191, 36, 0.2);
}

.stat-icon-container image {
  width: 48rpx;
  height: 48rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 菜单列表 */
.menu-card {
  margin: 32rpx;
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  padding: 16rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 28rpx;
}

.menu-item:active {
  background: linear-gradient(90deg, #F3E8FF, #FCE7F3);
}

.menu-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.menu-icon-container.menu-pink {
  background: #FBCFE8;
}

.menu-icon-container.menu-blue {
  background: #DBEAFE;
}

.menu-icon-container.menu-purple {
  background: #F3E8FF;
}

.menu-icon-container.menu-orange {
  background: #FFEDD5;
}

.menu-icon-container image {
  width: 48rpx;
  height: 48rpx;
}

.menu-label {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #1F2937;
}

.menu-arrow {
  width: 20rpx;
  height: 20rpx;
  color: #A78BFA;
}

.menu-arrow image {
  width: 20rpx;
  height: 20rpx;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 0 32rpx 32rpx;
  padding: 28rpx;
  background: #fff;
  border: 4rpx solid #FBCFE8;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.logout-btn text {
  font-size: 30rpx;
  font-weight: bold;
  color: #EC4899;
}

/* 版本信息 */
.version-info {
  margin: 0 32rpx 32rpx;
  padding: 28rpx;
  background: linear-gradient(90deg, #FEF3C7, #FCE7F3);
  border-radius: 40rpx;
  text-align: center;
}

.version-text {
  display: block;
  font-size: 24rpx;
  color: #4B5563;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.version-desc {
  font-size: 22rpx;
  color: #6B7280;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}

/* profile页面特定的导航样式 */
.profile-page .nav-item.active .nav-text {
  color: #9333EA;
  font-weight: bold;
}

.profile-page .nav-item.active .nav-icon {
  transform: scale(1.15);
}

/* 修复底部导航栏图标大小 */
.profile-page .nav-item:not(.nav-item-center) .nav-icon {
  width: 64rpx !important;
  height: 64rpx !important;
  padding: 0 !important;
  background: transparent !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  display: block !important;
}

.profile-page .nav-item:not(.nav-item-center) .nav-icon-active {
  width: 64rpx !important;
  height: 64rpx !important;
  padding: 0 !important;
  background: transparent !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  display: block !important;
}

/* 确保中间按钮图标大小正常 */
.profile-page .nav-item-center .nav-icon-center {
  width: 60rpx !important;
  height: 60rpx !important;
  padding: 16rpx !important;
  background: linear-gradient(135deg, #FF6B6B 0%, #9013FE 50%, #4A90E2 100%) !important;
  border-radius: 50% !important;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.2) !important;
  border: none !important;
}
