/* pages/learn/index.wxss */
page {
  background: linear-gradient(180deg, #ECFDF5 0%, #DBEAFE 30%, #F3E8FF 100%);
}

.container {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

/* 页面容器添加底部内边距，避免被底部导航遮挡 */
.page-container {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

/* 头部区域 */
.page-header {
  background: linear-gradient(135deg, #4ADE80 0%, #60A5FA 50%, #A78BFA 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  overflow: hidden;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

/* 头部内容区域 */
.main-content {
  padding: 0 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 原始header样式，保持兼容性 */
.header {
  background: linear-gradient(135deg, #4ADE80 0%, #60A5FA 50%, #A78BFA 100%);
  padding: 0;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  overflow: hidden;
  margin: 0;
}

/* 装饰元素样式 */
.star-decoration, .cloud-decoration {
  display: none;
}

.header-bg-1 {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(50%, 50%);
}

.header-bg-2 {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.header-content {
  position: relative;
  z-index: 10;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 0;
  text-align: center;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
}

.header-right {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-grid {
  display: flex;
  gap: 20rpx;
  padding: 0 32rpx;
  margin-top: -50rpx;
  position: relative;
  z-index: 20;
  margin-bottom: 32rpx;
}

.stat-card {
  flex: 1;
  padding: 40rpx 24rpx;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.stat-blue {
  background: linear-gradient(135deg, #60A5FA, #22D3EE);
}

.stat-green {
  background: linear-gradient(135deg, #4ADE80, #10B981);
}

.stat-purple {
  background: linear-gradient(135deg, #A78BFA, #F472B6);
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.stat-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 8rpx;
  flex-direction: column;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.stat-unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
}

/* 区块样式 */
.section {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  justify-content: space-between;
}

.section-bar {
  width: 10rpx;
  height: 50rpx;
  background: linear-gradient(180deg, #F472B6, #A855F7, #3B82F6);
  border-radius: 10rpx;
  flex-shrink: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  flex: 1;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

/* 路径卡片 */
.path-card {
  border-radius: 30rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.path-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 32rpx rgba(0, 0, 0, 0.12);
}

.path-yellow {
  background: linear-gradient(135deg, #FEF3C7, #FDBA74);
}

.path-blue {
  background: linear-gradient(135deg, #DBEAFE, #67E8F9);
}

.path-pink {
  background: linear-gradient(135deg, #FCE7F3, #D8B4FE);
}

.path-content {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.path-icon-box {
  flex-shrink: 0;
  margin-top: 8rpx;
}

.path-emoji {
  font-size: 72rpx;
}

.path-info {
  flex: 1;
  min-width: 0;
}

.path-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.path-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #1F2937;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.path-badge {
  padding: 8rpx 16rpx;
  background: linear-gradient(90deg, #22C55E, #3B82F6);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(34, 197, 94, 0.3);
  flex-shrink: 0;
}

.path-badge text {
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
}

.path-desc {
  font-size: 26rpx;
  color: #4B5563;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.path-progress {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar {
  height: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #22C55E, #3B82F6);
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #4B5563;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.progress-continue {
  font-size: 24rpx;
  color: #7C3AED;
  font-weight: bold;
  flex-shrink: 0;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}
